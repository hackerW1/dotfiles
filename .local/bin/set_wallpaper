#!/bin/sh

# Dependencies:
# convert wal xdotool xwallpaper 

wall_dir=~/Pictures/wallhaven/

if [ -z "$1" ]; then
  wall="$(find "$wall_dir" -type f -name "*.jpg" -o -name "*.png" | shuf -n1)"
else
  wall="$1"
fi

convert "$wall" ~/.local/share/bg.jpg
#feh --auto-zoom ~/.local/share/bg.jpg
wal -c
wal -q -i ~/.local/share/bg.jpg
sed -i 'N;$!P;D' $HOME/.cache/wal/colors-wal-dwm.h
(cd $HOME/.local/src/dwm/ && sudo make clean install>/dev/null)
#xdotool key super+F5
#$HOME/.local/src/wal-telegram/wal-telegram
#pywal-discord
